{
  "name": "dyson-swarm-cli",
  "version": "1.4.3",
  "description": "CLI for the dyson-swarm issue tracking system",
  "type": "module",
  "bin": {
    "swarm": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:binary": "bun build ./src/index.ts --compile --outfile swarm",
    "typecheck": "tsc --noEmit",
    "dev": "bun src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.0"
  },
  "dependencies": {
    "dyson-swarm": "1.4.3"
  },
  "devDependencies": {
    "@cliffy/ansi": "npm:@jsr/cliffy__ansi@1.0.0",
    "@cliffy/prompt": "npm:@jsr/cliffy__prompt@^1.0.0",
    "@cliffy/command": "npm:@jsr/cliffy__command@1.0.0",
    "@cliffy/flags": "npm:@jsr/cliffy__flags@1.0.0",
    "@cliffy/table": "npm:@jsr/cliffy__table@1.0.0",
    "@types/node": "25.2.3",
    "@types/proper-lockfile": "4.1.4",
    "cliffy-flat-help": "1.2.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
