{
  "name": "dyson-swarm",
  "version": "1.4.7",
  "description": "A markdown-based issue tracking system library",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-duchastel/dyson-swarm.git",
    "directory": "lib"
  },
  "homepage": "https://github.com/simon-duchastel/dyson-swarm#readme",
  "dependencies": {
    "proper-lockfile": "4.1.2",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@types/node": "25.2.3",
    "@types/proper-lockfile": "4.1.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
