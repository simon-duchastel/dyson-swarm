{
  "name": "dyson-swarm-monorepo",
  "version": "1.4.1",
  "description": "Monorepo for dyson-swarm issue tracking system",
  "private": true,
  "workspaces": [
    "lib",
    "cli"
  ],
  "scripts": {
    "build": "bun run --filter=lib build && bun run --filter=cli build",
    "build:lib": "bun run --filter=lib build",
    "build:cli": "bun run --filter=cli build",
    "test": "bun run --filter=lib test && bun run --filter=cli test",
    "test:lib": "bun run --filter=lib test",
    "test:cli": "bun run --filter=cli test",
    "dev:lib": "bun run --filter=lib dev",
    "dev:cli": "bun run --filter=cli dev"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "25.2.3",
    "@types/proper-lockfile": "4.1.4",
    "@types/uuid": "11.0.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "cliffy-flat-help": "1.2.2"
  }
}
