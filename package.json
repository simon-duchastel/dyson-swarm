{
  "name": "dyson-swarm-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for dyson-swarm issue tracking system",
  "private": true,
  "workspaces": [
    "lib",
    "cli"
  ],
  "scripts": {
    "build": "npm run build --workspace=lib && npm run build --workspace=cli",
    "build:lib": "npm run build --workspace=lib",
    "build:cli": "npm run build --workspace=cli",
    "test": "npm run test --workspace=lib && npm run test --workspace=cli",
    "test:lib": "npm run test --workspace=lib",
    "test:cli": "npm run test --workspace=cli",
    "dev:lib": "npm run dev --workspace=lib",
    "dev:cli": "npm run dev --workspace=cli"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "cliffy": "^2.5.1"
  }
}
