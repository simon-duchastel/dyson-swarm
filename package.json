{
  "name": "dyson-swarm",
  "version": "1.0.0",
  "description": "A markdown-based issue tracking system with JavaScript API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-duchastel/dyson-swarm.git"
  },
  "homepage": "https://github.com/simon-duchastel/dyson-swarm#readme",
  "bugs": {
    "url": "https://github.com/simon-duchastel/dyson-swarm/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli",
    "task-management",
    "project-management",
    "yaml",
    "frontmatter"
  ],
  "author": "Simon Duchastel",
  "license": "MIT",
  "dependencies": {
    "proper-lockfile": "^4.1.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  }
}