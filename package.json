{
  "name": "dyson-swarm-monorepo",
  "version": "1.4.4",
  "description": "Monorepo for dyson-swarm issue tracking system",
  "private": true,
  "workspaces": [
    "lib",
    "cli"
  ],
  "scripts": {
    "build": "bun run --filter dyson-swarm build && bun run --filter dyson-swarm-cli build",
    "build:lib": "bun run --filter dyson-swarm build",
    "build:cli": "bun run --filter dyson-swarm-cli build",
    "build:binary": "bun run --filter dyson-swarm-cli build:binary",
    "test": "bun run --filter dyson-swarm test && bun run --filter dyson-swarm-cli test",
    "test:lib": "bun run --filter dyson-swarm test",
    "test:cli": "bun run --filter dyson-swarm-cli test",
    "dev:lib": "bun run --filter dyson-swarm dev",
    "dev:cli": "bun run --filter dyson-swarm-cli dev"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "25.2.3",
    "@types/proper-lockfile": "4.1.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "cliffy-flat-help": "1.2.2"
  }
}
