{
  "name": "dyson-swarm",
  "version": "1.0.0",
  "description": "A markdown-based issue tracking system",
  "type": "module",
  "main": "lib/dist/index.js",
  "types": "lib/dist/index.d.ts",
  "bin": {
    "dyson": "cli/dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc -p cli/tsconfig.json",
    "dev": "tsx lib/src/index.ts",
    "dev:cli": "tsx cli/src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "issue-tracker",
    "markdown",
    "tasks",
    "git",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "proper-lockfile": "^4.1.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
